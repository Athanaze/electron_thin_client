{
  "name": "electron-thin-client",
  "version": "1.0.0",
  "description": "A thin client to access a specific web app on the local network without SSL certificate warnings",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --linux --mac --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "thin-client"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.electron.thinclient",
    "productName": "Thin Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json"
    ],
    "asar": true,
    "compression": "maximum",
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network",
      "icon": "build/icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "This app needs access to your camera for video calls and media features in the web application.",
        "NSMicrophoneUsageDescription": "This app needs access to your microphone for audio calls and media features in the web application.",
        "NSAppleEventsUsageDescription": "This app needs to control other applications for full functionality."
      }
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
